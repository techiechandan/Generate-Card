<%- include('../common/header') %>
  <%- include('sidebar') %>
    <div class="admin-main-container-content">
      <div class="row justify-content-between">
        <div class="col-12 col-md-12">
          <div class="card mb-3">
            <h4 class="h4 text-center p-2 text-danger border-bottom fw-bolder">Cards</h4>
            <div class="container">
              <form class="" action="" method="post">
                <div class="row justify-content-between mb-3">
                  <div class="col-3">
                    <input class="form-control me-2" name="fName" type="text" placeholder="student name"
                      aria-label="Search">
                  </div>
                  <div class="col-3">
                    <input class="form-control me-2" name="fEmail" type="email" placeholder="username@email.com"
                      aria-label="Search">
                  </div>
                  <div class="col-2">
                    <select class="form-select" name="fBloodGroup" id="bloodGroup" aria-label="Default select example">
                      <option value= "null">Blood Group</option>
                      <option value="O+">O+</option>
                      <option value="O-">O-</option>
                      <option value="A+">A+</option>
                      <option value="A-">A-</option>
                      <option value="B+">B+</option>
                      <option value="B-">B-</option>
                      <option value="AB+">AB+</option>
                      <option value="AB-">AB-</option>
                    </select>
                  </div>
                  <div class="col-2">
                    <select class="form-select" name="fCourse" id="course" aria-label="Default select example">
                      <option value="null">Course</option>
                      <option value="BCA">BCA</option>
                      <option value="BBA">BBA</option>
                      <option value="BJMC">BJMC</option>
                      <option value="B-COM">B-COM</option>
                      <option value="PGDM">PGDM</option>
                    </select>
                  </div>
                  <div class="col-2">
                    <button class="btn btn-danger  text-center " type="submit">Search Student</button>
                  </div>
                </div>
              </form>
            </div>
          </div>

          <div class="container ">
            <table class="table table-hover shadow">
              <thead>
                <tr class="table-primary">
                  <th scope="col">Sl No.</th>
                  <th scope="col">Name</th>
                  <th scope="col">Email</th>
                  <th scope="col">Course</th>
                  <th scope="col">Generated By</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
                <% if(cards.length>0){
                  for(let i=0; i < cards.length; i++){ %>
                    <tr class="table-secondary">
                      <th class="px-4" scope="row">
                        <%=i+1%>
                      </th>
                      <td>
                        <%=cards[i].name%>
                      </td>
                      <td class="word-wrap">
                        <%=cards[i].email%>
                      </td>
                      <td>
                        <%= cards[i].course %>
                      </td>
                      <td>
                        <%= cards[i].GeneratedBy %>
                      </td>
                      <td class="">
                        <a class="text-decoration-none px-2" href="/admin/cards/update-card?id=<%= cards[i]._id %>">
                          <button class="btn btn-success px-4">
                            <i class="fa-regular fa-pen-to-square"></i>
                          </button>
                        </a>

                        <a href="/admin/cards/delete-card?id=<%= cards[i]._id %>">
                          <button class="btn btn-danger px-4">
                            <i class="far fa-trash-alt"></i>
                          </button>
                        </a>
                      </td>
                    </tr>
                  <% } } else{ %>
                      <tr>
                        <td>
                          User not found!
                        </td>
                      </tr>
                      <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <%- include('../common/footer') %>
