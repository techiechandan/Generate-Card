                margin: 5px;
            }

            .qrcode {
                text-align: center;
                position: absolute;
                top: 7.5%;
                left: 115px;
            }

            .downloadBtn{
                display:flex;
                justify-content:center;
                margin-top: 4rem;
                margin-bottom: 4rem;
            }
