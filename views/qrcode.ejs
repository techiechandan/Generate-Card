            }
            .details1 p{
                margin: 0;
            }

            .details {
                position: absolute;
                top: 37px;
                text-transform: capitalize;
                font-size: 7.5px;
                text-emphasis: spacing;
                margin-left: 25px;
            }

            .details .Address {
                width: 60%;
                text-align: justify;
            }
            .details .Address {
                width: 60%;
                text-align: justify;
            }

            .qrcode img {
                height: 85px;
                width: 85px;
